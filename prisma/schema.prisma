generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// User model with Google OAuth + email/password auth
model User {
  id                String        @id @default(cuid())
  name              String?
  email             String        @unique
  emailVerified     DateTime?
  image             String?
  password          String?       // bcrypt hash, null for Google-only users
  defaultCampaignId String?
  uiLanguage        String        @default("en")
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  accounts                Account[]
  sessions                Session[]
  campaigns               Campaign[]
  chatMessages            ChatMessage[]
  campaignMemberships     CampaignMember[]
  assignedCharacterSheets CharacterSheet[] @relation("PlayerCharacterSheets")

  @@map("users")
}

// NextAuth Account model
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session model
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth Verification Token model
model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

enum CampaignRole {
  DM
  PLAYER
}

enum InviteStatus {
  PENDING
  ACCEPTED
}

// Campaign membership — links players to campaigns they've been invited to
model CampaignMember {
  id         String       @id @default(cuid())
  campaignId String
  userId     String?      // null while invite is PENDING (player hasn't signed up yet)
  email      String       // email used for the invite
  role       CampaignRole @default(PLAYER)
  status     InviteStatus @default(PENDING)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([campaignId, email])
  @@index([userId])
  @@index([campaignId])
  @@map("campaign_members")
}

// Campaign model
model Campaign {
  id          String   @id @default(cuid())
  name        String
  description String?
  language    String   @default("en")
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner           User             @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  audioFiles      AudioFile[]
  wikiEntries     WikiEntry[]
  chatMessages    ChatMessage[]
  characterSheets CharacterSheet[]
  members         CampaignMember[]

  @@index([ownerId])
  @@map("campaigns")
}

enum AudioFileStatus {
  UPLOADING
  UPLOADED
  PROCESSING
  PROCESSED
  FAILED
}

// Audio file model
model AudioFile {
  id            String          @id @default(cuid())
  filename      String
  fileSize      Int
  mimeType      String
  duration      Int?
  blobUrl       String
  blobKey       String          @unique
  status        AudioFileStatus @default(UPLOADED)
  transcription String?
  summary       String?
  errorMessage  String?
  campaignId    String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  campaign    Campaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  wikiEntries WikiEntry[]

  @@index([campaignId])
  @@index([status])
  @@map("audio_files")
}

enum WikiEntryType {
  SESSION_RECAP
  CHARACTER
  LOCATION
  EVENT
  ITEM
  NPC
  FACTION
  LORE
  QUEST
  OTHER
}

// Wiki entry model
model WikiEntry {
  id              String        @id @default(cuid())
  title           String
  slug            String
  type            WikiEntryType @default(OTHER)
  content         String
  excerpt         String?
  searchVector    String?       // For full-text search (generated column in migration)
  isAutoGenerated Boolean       @default(false)
  tags            String[]      @default([])
  campaignId      String
  audioFileId     String?
  parentId        String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  campaign       Campaign        @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  audioFile      AudioFile?      @relation(fields: [audioFileId], references: [id], onDelete: SetNull)
  parent         WikiEntry?      @relation("WikiEntryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children       WikiEntry[]     @relation("WikiEntryHierarchy")
  characterSheet CharacterSheet?

  @@unique([campaignId, slug])
  @@index([campaignId])
  @@index([type])
  @@index([audioFileId])
  @@map("wiki_entries")
}

// Character sheet model — structured D&D character data linked to a CHARACTER wiki entry
model CharacterSheet {
  id               String   @id @default(cuid())
  wikiEntryId      String   @unique
  data             Json     // Structured CharacterSheetData (see types/character-sheet.ts)
  pdfBlobUrl       String?  // Original uploaded PDF URL
  pdfBlobKey       String?  // Blob storage key for cleanup
  campaignId       String
  assignedPlayerId String?  // The User.id of the player who owns this character
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  wikiEntry      WikiEntry @relation(fields: [wikiEntryId], references: [id], onDelete: Cascade)
  campaign       Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  assignedPlayer User?     @relation("PlayerCharacterSheets", fields: [assignedPlayerId], references: [id], onDelete: SetNull)

  @@index([campaignId])
  @@index([assignedPlayerId])
  @@map("character_sheets")
}

// Chat message model
model ChatMessage {
  id          String   @id @default(cuid())
  role        String   // "user" or "assistant"
  content     String
  contextUsed Json?    // JSON array of wiki entry IDs used as context
  campaignId  String
  userId      String
  createdAt   DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([userId])
  @@map("chat_messages")
}
