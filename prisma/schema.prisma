generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// User model with Google OAuth profile
model User {
  id                String        @id @default(cuid())
  name              String?
  email             String        @unique
  emailVerified     DateTime?
  image             String?
  defaultCampaignId String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  accounts      Account[]
  sessions      Session[]
  campaigns     Campaign[]
  chatMessages  ChatMessage[]

  @@map("users")
}

// NextAuth Account model
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session model
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth Verification Token model
model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

// Campaign model
model Campaign {
  id          String   @id @default(cuid())
  name        String
  description String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner        User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  audioFiles   AudioFile[]
  wikiEntries  WikiEntry[]
  chatMessages ChatMessage[]

  @@index([ownerId])
  @@map("campaigns")
}

enum AudioFileStatus {
  UPLOADING
  UPLOADED
  PROCESSING
  PROCESSED
  FAILED
}

// Audio file model
model AudioFile {
  id            String          @id @default(cuid())
  filename      String
  fileSize      Int
  mimeType      String
  duration      Int?
  blobUrl       String
  blobKey       String
  status        AudioFileStatus @default(UPLOADED)
  transcription String?
  summary       String?
  errorMessage  String?
  campaignId    String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  campaign    Campaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  wikiEntries WikiEntry[]

  @@index([campaignId])
  @@index([status])
  @@map("audio_files")
}

enum WikiEntryType {
  SESSION_RECAP
  CHARACTER
  LOCATION
  EVENT
  ITEM
  NPC
  FACTION
  LORE
  QUEST
  OTHER
}

// Wiki entry model
model WikiEntry {
  id              String        @id @default(cuid())
  title           String
  slug            String
  type            WikiEntryType @default(OTHER)
  content         String
  excerpt         String?
  searchVector    String?       // For full-text search (generated column in migration)
  isAutoGenerated Boolean       @default(false)
  tags            String[]      @default([])
  campaignId      String
  audioFileId     String?
  parentId        String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  campaign  Campaign   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  audioFile AudioFile? @relation(fields: [audioFileId], references: [id], onDelete: SetNull)
  parent    WikiEntry? @relation("WikiEntryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children  WikiEntry[] @relation("WikiEntryHierarchy")

  @@unique([campaignId, slug])
  @@index([campaignId])
  @@index([type])
  @@index([audioFileId])
  @@map("wiki_entries")
}

// Chat message model
model ChatMessage {
  id          String   @id @default(cuid())
  role        String   // "user" or "assistant"
  content     String
  contextUsed Json?    // JSON array of wiki entry IDs used as context
  campaignId  String
  userId      String
  createdAt   DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([userId])
  @@map("chat_messages")
}
